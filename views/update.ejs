<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%=title%>
    </title>
    <%- include('partials/files.ejs') %>

    <script src="/add-ons/dataTables/jquery.dataTables.min.js"></script>
    <script src="/add-ons/dataTables/dataTables.bootstrap4.min.js"></script>

    <link rel="stylesheet" href="/css/update-style.css">
    <link rel="stylesheet" href="/add-ons/dataTables/dataTables.bootstrap4.min.css">
</head>

<body>

    <%-include('./partials/navbar.ejs')%>

    <div class="container">
        <div id="update_form">
            <div class="row">
                <div class="offset-md-2 col-md-8 input-group" title="Select Event to Participate">
                    <div class="input-group-prepend">
                        <span id="pevent_label" class="input_icon h4">
                            <i class="fas fa-calendar-alt "></i>
                        </span>
                    </div>
                    <select class="form-control" id="pevent_update" aria-describedby="pevent_label"
                        name="pevent_update">
                        <option value=-1>Event</option>
                        <% for(var i = 0 ; i < events_data.length ; i++ ) { %>
                        <option value=<%=i+1%>><%=events_data[i].name%></option>
                        <% } %>
                    </select>
                    <input type="hidden" id="event" value='<%-JSON.stringify(events_data)%>'>
                </div>
            </div>

            <div class="row" id="table_content">
                <div class="offset-md-2 col-md-8">
                    <table id="event_table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Course</th>
                                <th>Roll No.</th>
                                <th>Contact</th>
                            </tr>
                        </thead>
                        <tbody id="event_table_data">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div id="snackbar"></div>

    <script>var temp = "<%-id %>";
        var table;
        $(document).ready(function() {
            table = $('#event_table').DataTable();
            table.draw();
        })
    </script>
    <script src="/js/add-main.js"></script>
    <script src="/js/update-main.js"></script>
</body>

</html>